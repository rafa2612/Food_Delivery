<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food_delivery.fragments.profile"
    android:background="#007aae">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20sp"
        android:padding="10dp"/>


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/proname"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:padding="3dp" />

        <EditText
            android:id="@+id/proemail"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:padding="3dp" />

        <EditText
            android:id="@+id/progender"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:padding="3dp" />

        <EditText
            android:id="@+id/promobile"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:padding="3dp" />


        <EditText
            android:id="@+id/proadress"
            android:background="#F6F2F2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:padding="3dp"/>


        <Button
            android:id="@+id/savepro"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:background="#C3BBBB"
            android:layout_marginBottom="5dp"
            android:layout_margin="5dp"
            android:text="SAVE"/>




    </LinearLayout>

    </LinearLayout>

</FrameLayout>