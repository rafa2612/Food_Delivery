<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".food_delivery.fragments.home">

    <ScrollView
        android:id="@+id/scrollhome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativehome1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F3F8F5"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclercoupon"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="horizontal"
                    >

                </androidx.recyclerview.widget.RecyclerView>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

            <TextView
                android:id="@+id/toprestaurent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP PICKS"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                app:fontFamily="@font/archivo_black" />



            <RelativeLayout
                android:id="@+id/relativehome2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#F3F8F5"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclertoprestaurents"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:orientation="horizontal"
                        >

                    </androidx.recyclerview.widget.RecyclerView>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>



            <TextView
                android:id="@+id/allrestaurents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALL RESTAURENTS"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textStyle="bold"
                app:fontFamily="@font/archivo_black" />




            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort by"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/sortbyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:drawableLeft="@drawable/ic_action_name"
                android:padding="5dp"
                android:drawablePadding="2dp"
                android:layout_margin="5dp"
                    android:background="#BDBEC1"

                />
                <TextView
                    android:id="@+id/sortbyrating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:drawableLeft="@drawable/ic_action_rattingg"
                    android:padding="5dp"
                    android:drawablePadding="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp"
                    android:background="#BDBEC1"

                    />


                <TextView
                    android:id="@+id/sortbycost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost"
                    android:drawableLeft="@drawable/ic_action_cost"
                    android:padding="5dp"
                    android:drawablePadding="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="5dp"
                    android:background="#BDBEC1"

                    />





            </LinearLayout>



            <RelativeLayout
                android:id="@+id/relativehome3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerallrestaurents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:nestedScrollingEnabled="false"
                        >

                    </androidx.recyclerview.widget.RecyclerView>




            </RelativeLayout>







        </androidx.appcompat.widget.LinearLayoutCompat>






    </ScrollView>

</FrameLayout>